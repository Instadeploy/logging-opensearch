{
    "index_patterns": ["laravel-logs-*"],
    "template": {
      "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0
      },
      "mappings": {
        "properties": {
          "@timestamp": { "type": "date" },
          "datetime": { "type": "date" },
          "message": { "type": "text" },
          "channel": { "type": "keyword" },
          "level": { "type": "keyword" },
          "level_name": { "type": "keyword" },
          "context": { "type": "object", "enabled": true },
          "extra": { "type": "object", "enabled": true }
        }
      }
    }
  }